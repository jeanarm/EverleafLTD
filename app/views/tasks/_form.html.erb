<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card">
  <div class="card-body">   
  <h1>New Task</h1>
  <div class:"form-group">
    <%= form.label :title %>
    <%= form.text_field :title,class:"form-control" %>
  </div>

  <div class:"form-group">
    <%= form.label :content %>
    <%= form.text_area :content,class:"form-control" %>
  </div>
  <div class:"form-group">
    <%= form.label :Expired_date %>
    <%= form.date_field :expired_date, class:"form-control"%>
  </div>

  <div class="field">
  <% if logged_in? %>
    <%= form.hidden_field :usr_id, value: current_user.id %>
    <% end %>
   
  </div>

  <div class:"form-group">
  <%= form.label :Priority %>
  <%= form.radio_button :priority, 'low' %> low  <%= form.radio_button :priority, 'medium' %> medium <%= form.radio_button :priority, 'high' %> high<br />
</div>
<div class:"form-group">
  <%= form.label :status %>
  <%= form.radio_button :status, 'Not Started' %> Not Started <%= form.radio_button :status, 'In Progress' %> In Progress <%= form.radio_button :status, 'Done' %> Done<br />
</div>
<label>label</label>
<p><%Label.all.each do |label| %>
  
  <% if label.usr_id == current_user.id %>
  
    <%=form.check_box :labels, {multiple: true, checked: label[:checked], disabled: label[:disabled], include_hidden: false }, label[:id] %>
    <label class="label"><%= label.name %></label>
  <%end%>
  
<% end %> </p>
  <div class:"form-group">
    <%= form.submit 'Create Task', class:"btn btn-success"%>
  </div>
  <div>
  <br>
<%= link_to 'Back', tasks_path, class:"btn btn-dark"  %>
</div>
<% end %>

  </div>
</div>







